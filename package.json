{
  "name": "vue-use-forward-ref",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@10.30.3",
  "description": "A lightweight Vue 3 composable to forward component ref and merge child exposed API onto parent instance",
  "author": "REFINIST",
  "license": "MIT",
  "homepage": "https://github.com/refinist/vue-use-forward-ref#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/refinist/vue-use-forward-ref.git"
  },
  "bugs": {
    "url": "https://github.com/refinist/vue-forwardref/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "composable",
    "forward-ref",
    "ref-forwarding",
    "expose",
    "composition-api",
    "typescript",
    "component-ref"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "build": "tsdown",
    "play": "vite",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --cache --write .",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsgo --noEmit"
  },
  "peerDependencies": {
    "vue": ">=3"
  },
  "devDependencies": {
    "@refinist/eslint-config": "^1.2.0",
    "@refinist/prettier-config": "^1.1.1",
    "@typescript/native-preview": "7.0.0-dev.20260228.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.4",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.4.1",
    "eslint": "^9.39.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.8.1",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue": "^3.5.21"
  },
  "prettier": "@refinist/prettier-config",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
